{
    "version": 2,
    "buildCommand": "npm run build",
    "outputDirectory": "dist",
    "installCommand": "npm install && cd api && npm install",
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "/api/src/index.ts"
        }
    ],
    "functions": {
        "api/src/index.ts": {
            "runtime": "nodejs20.x",
            "maxDuration": 10
        }
    }
}