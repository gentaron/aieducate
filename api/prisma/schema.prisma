generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String     @id @default(uuid())
  walletAddress String     @unique
  createdAt     DateTime   @default(now())
  purchases     Purchase[]
}

model Purchase {
  id        String   @id @default(uuid())
  userId    String
  courseId  String
  txHash    String
  amount    String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([courseId])
}
